<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">
<beans>

  <!-- Property file configuration -->
  <bean id="demoFinancialMastersProperties" class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
    <property name="ignoreUnresolvablePlaceholders" value="true" />
    <property name="locations">
      <list>
        <value>classpath:demoFinancialMasters-${opengamma.platform.runmode}.properties</value>
      </list>
    </property>
  </bean>

  <bean id="abstractHibernateSessionFactory" class="org.springframework.orm.hibernate3.LocalSessionFactoryBean" abstract="true">
    <property name="mappingResources">
      <list>
        <value>com/opengamma/financial/security/db/future/BondFutureTypeBean.hbm.xml</value>
        <value>com/opengamma/financial/security/db/bond/BondSecurityBean.hbm.xml</value>
        <value>com/opengamma/financial/security/db/BusinessDayConventionBean.hbm.xml</value>
        <value>com/opengamma/financial/security/db/future/CashRateTypeBean.hbm.xml</value>
        <value>com/opengamma/financial/security/db/future/CommodityFutureTypeBean.hbm.xml</value>
        <value>com/opengamma/financial/security/db/bond/CouponTypeBean.hbm.xml</value>
        <value>com/opengamma/financial/security/db/CurrencyBean.hbm.xml</value>
        <value>com/opengamma/financial/security/db/DayCountBean.hbm.xml</value>
        <value>com/opengamma/financial/security/db/equity/EquitySecurityBean.hbm.xml</value>
        <value>com/opengamma/financial/security/db/ExchangeBean.hbm.xml</value>
        <value>com/opengamma/financial/security/db/fra/FRASecurityBean.hbm.xml</value>
        <value>com/opengamma/financial/security/db/FrequencyBean.hbm.xml</value>
        <value>com/opengamma/financial/security/db/future/FutureBundleBean.hbm.xml</value>
        <value>com/opengamma/financial/security/db/future/FutureSecurityBean.hbm.xml</value>
        <value>com/opengamma/financial/security/db/equity/GICSCodeBean.hbm.xml</value>
        <value>com/opengamma/financial/security/db/bond/GuaranteeTypeBean.hbm.xml</value>
        <value>com/opengamma/financial/security/db/IdentifierAssociationBean.hbm.xml</value>
        <value>com/opengamma/financial/security/db/bond/IssuerTypeBean.hbm.xml</value>
        <value>com/opengamma/financial/security/db/bond/MarketBean.hbm.xml</value>
        <value>com/opengamma/financial/security/db/option/OptionSecurityBean.hbm.xml</value>
        <value>com/opengamma/financial/security/db/SecurityBean.hbm.xml</value>
        <value>com/opengamma/financial/security/db/future/UnitBean.hbm.xml</value>
        <value>com/opengamma/financial/security/db/bond/YieldConventionBean.hbm.xml</value>
        <value>com/opengamma/financial/security/db/swap/SwapSecurityBean.hbm.xml</value>
        <value>com/opengamma/financial/security/db/cash/CashSecurityBean.hbm.xml</value>
      </list>
    </property>
  </bean>

  <bean id="dbTransactionDefinition" class="org.springframework.transaction.support.DefaultTransactionDefinition">
    <property name="isolationLevelName" value="ISOLATION_SERIALIZABLE" />
    <property name="propagationBehaviorName" value="PROPAGATION_REQUIRED" />
  </bean>

  <bean id="finDataSource" class="org.apache.commons.dbcp.BasicDataSource" destroy-method="close">
    <property name="driverClassName" value="${opengamma.financial.jdbc.driver}" />
    <property name="url" value="${opengamma.financial.jdbc.url}" />
    <property name="username" value="${opengamma.financial.jdbc.username}" />
    <property name="password" value="${opengamma.financial.jdbc.password}" />
  </bean>

  <bean id="finDbHelper" class="${opengamma.financial.db.dbhelper}" />

  <bean id="finJdbcTemplate" class="org.springframework.jdbc.core.simple.SimpleJdbcTemplate">
    <constructor-arg ref="finDataSource" />
  </bean>

  <bean id="finHibernateTransMgr" class="org.springframework.orm.hibernate3.HibernateTransactionManager">
    <property name="sessionFactory" ref="finHibernateSessionFactory"/>
  </bean>

  <bean id="finHibernateSessionFactory" parent="abstractHibernateSessionFactory">
    <property name="dataSource" ref="finDataSource"/>
    <property name="hibernateProperties">
      <value>
        hibernate.dialect=org.hibernate.dialect.DerbyDialect
        hibernate.show_sql=false
        hibernate.format_sql=false
      </value>
    </property>
  </bean>

  <bean id="finDbSecurityMasterDetail" class="com.opengamma.financial.security.master.db.HibernateSecurityMasterDetailProvider">
    <property name="sessionFactory" ref="finHibernateSessionFactory" />
  </bean>

  <bean id="finTransTemplate" class="org.springframework.transaction.support.TransactionTemplate">
    <constructor-arg ref="finHibernateTransMgr" />
    <constructor-arg ref="dbTransactionDefinition" />
  </bean>

  <!-- SecurityMaster -->
  <bean id="dbSecurityMaster" class="com.opengamma.financial.security.master.db.DbSecurityMaster">
    <constructor-arg ref="finTransTemplate" />
    <constructor-arg ref="finJdbcTemplate" />
    <constructor-arg ref="finDbHelper" />
    <constructor-arg ref="finDbSecurityMasterDetail" />
    <property name="identifierScheme" value="${opengamma.financial.db.securitymaster.scheme}" />
  </bean>

  <!-- SecuritySource -->
  <bean id="sharedSecuritySource" class="com.opengamma.engine.security.EHCachingSecuritySource">
    <constructor-arg>
      <bean class="com.opengamma.financial.security.MasterSecuritySource">
        <constructor-arg ref="dbSecurityMaster" />
      </bean>
    </constructor-arg>
  </bean>
 
  <!-- PositionMaster --> 
  <bean id="dbPositionMaster" class="com.opengamma.financial.position.master.db.DbPositionMaster">
    <constructor-arg>
      <bean class="org.springframework.jdbc.datasource.DataSourceTransactionManager">
        <property name="dataSource" ref="finDataSource"/>
      </bean>
    </constructor-arg>
    <constructor-arg ref="dbTransactionDefinition" />
    <constructor-arg ref="finDbHelper" />
    <property name="identifierScheme" value="${opengamma.financial.db.positionmaster.scheme}" />
  </bean>

  <!-- PositionSource -->  
  <bean id="sharedPositionSource" class="com.opengamma.engine.position.EHCachingPositionSource">
    <constructor-arg>
      <bean class="com.opengamma.financial.position.master.MasterPositionSource">
        <constructor-arg ref="dbPositionMaster" />
      </bean>
    </constructor-arg>
  </bean>
  
</beans>