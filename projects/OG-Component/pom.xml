<?xml version="1.0" encoding="UTF-8"?>
<project
    xmlns="http://maven.apache.org/POM/4.0.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <parent>
    <groupId>com.opengamma.platform</groupId>
    <artifactId>og-parent</artifactId>
    <version>2.0.0-SNAPSHOT</version>
    <relativePath>../OG-Parent</relativePath>
  </parent>
  <artifactId>og-component</artifactId>
  <packaging>jar</packaging>
  <name>OG-Component</name>
  <description>OpenGamma platform component-based configuration</description>

  <scm>
    <url>https://github.com/OpenGamma/OG-Platform/tree/master/projects/OG-Component</url>
  </scm>

  <!-- ==================================================================== -->
  <build>
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-assembly-plugin</artifactId>
        <executions>
          <execution>
            <id>config</id>
            <phase>package</phase>
            <goals>
              <goal>single</goal>
            </goals>
            <configuration>
              <descriptors>
                <descriptor>src/main/assembly/assembly-config.xml</descriptor>
              </descriptors>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>

  <!-- ==================================================================== -->
  <dependencies>
    <dependency>
      <groupId>com.opengamma.platform</groupId>
      <artifactId>og-web</artifactId>
      <version>${project.version}</version>
    </dependency>
    <dependency>
      <groupId>com.opengamma.platform</groupId>
      <artifactId>og-masterdb</artifactId>
      <version>${project.version}</version>
    </dependency>
  </dependencies>

  <!-- ==================================================================== -->
  <profiles>
    <!-- Hack to add extra config directory to classpath in m2e -->
    <!-- m2e cannot handle adding classifier based jar files to classpath -->
    <profile>
      <id>m2e</id>
      <activation>
        <property><name>m2e.version</name></property>
      </activation>
      <build>
        <resources>
          <resource>
            <directory>src/main/resources</directory>
          </resource>
          <resource>
            <directory>config</directory>
          </resource>
        </resources>
      </build>
    </profile>
  </profiles>

  <!-- ==================================================================== -->
  <properties>
  </properties>

</project>
