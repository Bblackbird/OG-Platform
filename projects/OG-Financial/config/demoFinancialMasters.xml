<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">
<beans>

  <!-- Property file configuration -->
  <bean id="demoFinancialMastersProperties" class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
    <property name="ignoreUnresolvablePlaceholders" value="true" />
    <property name="locations">
      <list>
        <value>classpath:demoFinancialMasters-${opengamma.platform.runmode}.properties</value>
      </list>
    </property>
  </bean>

  <bean id="abstractDbSource" class="com.opengamma.util.db.DbSourceFactoryBean" abstract="true">
    <property name="transactionIsolationLevelName" value="ISOLATION_SERIALIZABLE" />
    <property name="transactionPropagationBehaviorName" value="PROPAGATION_REQUIRED" />
    <property name="hibernateMappingFiles">
      <list>
        <bean class="com.opengamma.financial.security.master.db.hibernate.HibernateSecurityMasterFiles"/>
      </list>
    </property>
  </bean>

  <bean id="finDataSource" class="org.apache.commons.dbcp.BasicDataSource" destroy-method="close">
    <property name="driverClassName" value="${opengamma.financial.jdbc.driver}" />
    <property name="url" value="${opengamma.financial.jdbc.url}" />
    <property name="username" value="${opengamma.financial.jdbc.username}" />
    <property name="password" value="${opengamma.financial.jdbc.password}" />
  </bean>

  <bean id="finDbSource" parent="abstractDbSource">
    <property name="name" value="Financial"/>
    <property name="dataSource" ref="finDataSource"/>
    <property name="dialect" value="${opengamma.financial.db.dbhelper}"/>
  </bean>

  <bean id="cacheManager" class="org.springframework.cache.ehcache.EhCacheManagerFactoryBean">
    <property name="shared" value="true"/>
  </bean>
  
  <bean id="mongoDBConfigurationSettings" class="com.opengamma.util.MongoDBConnectionSettings">
    <property name="host" value="${mongoDB.host}" />
    <property name="database" value="${mongoDB.config.database}" />
  </bean>
  
  <!-- SecurityMaster -->
  <bean id="dbSecurityMaster" class="com.opengamma.financial.security.master.db.DbSecurityMaster">
    <constructor-arg ref="finDbSource" />
    <property name="identifierScheme" value="${opengamma.financial.db.securitymaster.scheme}" />
  </bean>

  <!-- SecuritySource -->
  <bean id="sharedSecuritySource" class="com.opengamma.engine.security.EHCachingSecuritySource">
    <constructor-arg>
      <bean class="com.opengamma.financial.security.master.MasterSecuritySource">
        <constructor-arg ref="dbSecurityMaster" />
      </bean>
    </constructor-arg>
    <constructor-arg ref="cacheManager" />
  </bean>

  <!-- PositionMaster --> 
  <bean id="dbPositionMaster" class="com.opengamma.financial.position.master.db.DbPositionMaster">
    <constructor-arg ref="finDbSource" />
    <property name="identifierScheme" value="${opengamma.financial.db.positionmaster.scheme}" />
  </bean>

  <!-- PositionSource -->  
  <bean id="sharedPositionSource" class="com.opengamma.engine.position.EHCachingPositionSource">
    <constructor-arg>
      <bean class="com.opengamma.financial.position.master.MasterPositionSource">
        <constructor-arg ref="dbPositionMaster" />
      </bean>
    </constructor-arg>
    <constructor-arg ref="cacheManager" />
  </bean>

  <!-- TimeSeries database -->
  <import resource="classpath:com/opengamma/financial/timeseries/db/tssQueries.xml" />
  <bean id="timeseriesMaster" class="${opengamma.tss.dao}">
    <constructor-arg>
      <bean class="org.springframework.jdbc.datasource.DataSourceTransactionManager">
        <property name="dataSource">
          <bean class="org.apache.commons.dbcp.BasicDataSource" destroy-method="close">
            <property name="driverClassName" value="${opengamma.tss.jdbc.driver}" />
            <property name="url" value="${opengamma.tss.jdbc.url}" />
            <property name="username" value="${opengamma.tss.jdbc.username}" />
            <property name="password" value="${opengamma.tss.jdbc.password}" />
          </bean>
        </property>
      </bean>
    </constructor-arg>
    <constructor-arg ref="tssNamedSQLMap"/>
    <constructor-arg value="false"/>
  </bean>
  <bean id="timeseriesConfigMaster" class="com.opengamma.config.db.MongoDBConfigMaster">
    <constructor-arg value="com.opengamma.financial.timeseries.config.TimeSeriesMetaDataConfiguration"/>
    <constructor-arg ref="mongoDBConfigurationSettings" />
  </bean> 
  <bean id="timeseriesConfigSource" class="com.opengamma.engine.config.MongoDBMasterConfigSource">
  <constructor-arg>
      <map>
        <entry key="com.opengamma.financial.timeseries.config.TimeSeriesMetaDataConfiguration" value-ref="timeseriesConfigMaster"/>
      </map>
  </constructor-arg>
  </bean>
  <bean id="sharedHistoricalDataProvider" class="com.opengamma.engine.historicaldata.EHCachingHistoricalDataProvider">
    <constructor-arg>
      <bean class="com.opengamma.financial.timeseries.MasterTimeSeriesSource">
        <constructor-arg ref="timeseriesMaster"/>
        <constructor-arg>
          <bean class="com.opengamma.financial.timeseries.config.DefaultTimeSeriesResolver">
            <constructor-arg ref="sharedSecuritySource"/>
            <constructor-arg>
              <bean class="com.opengamma.financial.timeseries.exchange.DefaultExchangeDataProvider"/>
            </constructor-arg>
            <constructor-arg ref="timeseriesConfigSource"/>
          </bean>
        </constructor-arg>
      </bean>
    </constructor-arg>
    <constructor-arg ref="cacheManager" />
  </bean>
  
</beans>
