<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

  <bean id="longPollingConnectionManager" class="com.opengamma.web.server.push.LongPollingConnectionManager">
    <constructor-arg ref="updateManager"/>
  </bean>

  <bean id="updateManager" class="com.opengamma.web.server.push.RestUpdateManagerImpl">
    <constructor-arg index="0" ref="changeManager"/>
    <constructor-arg index="1">
      <bean class="com.opengamma.web.server.push.MasterChangeManagerImpl">
        <constructor-arg><list/></constructor-arg>
      </bean>
    </constructor-arg>
    <constructor-arg index="2" ref="viewportFactory"/>
  </bean>

  <bean id="viewportFactory" class="com.opengamma.web.server.push.TestViewportFactory"/>

  <bean id="viewportsResource" class="com.opengamma.web.server.push.ViewportsResource">
    <constructor-arg ref="updateManager"/>
  </bean>

  <bean id="changeManager" class="com.opengamma.web.server.push.TestChangeManager"/>

</beans>