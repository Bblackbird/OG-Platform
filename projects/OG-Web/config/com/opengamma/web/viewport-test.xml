<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

  <bean id="longPollingConnectionManager" class="com.opengamma.web.server.push.web.LongPollingConnectionManager">
    <constructor-arg ref="updateManager"/>
  </bean>

  <bean id="updateManager" class="com.opengamma.web.server.push.subscription.RestUpdateManagerImpl">
    <constructor-arg index="0" ref="changeManager"/><!--no change manager needed for these tests-->
    <constructor-arg index="1" ref="viewportFactory"/>
  </bean>

  <bean id="viewportFactory" class="com.opengamma.web.server.push.web.TestViewportFactory"/>

  <!--TODO does this need to have request scope? if so what else needs setting up? a Spring servlet?-->
  <bean id="viewportsResource" class="com.opengamma.web.server.push.web.ViewportsResource">
    <constructor-arg ref="updateManager"/>
  </bean>

  <bean id="changeManager" class="com.opengamma.web.server.push.test.TestChangeManager"/>

</beans>