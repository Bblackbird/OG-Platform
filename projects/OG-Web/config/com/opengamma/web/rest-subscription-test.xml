<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

  <bean id="longPollingConnectionManager" class="com.opengamma.web.server.push.web.LongPollingConnectionManager">
    <constructor-arg ref="subscriptionManager"/>
  </bean>

  <!--TODO real subscription manager?-->
  <bean id="subscriptionManager" class="com.opengamma.web.server.push.subscription.SubscriptionManagerImpl">
    <constructor-arg index="0" ref="changeManager"/>
