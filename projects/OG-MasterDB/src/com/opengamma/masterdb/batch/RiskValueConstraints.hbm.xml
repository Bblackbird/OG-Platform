<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="com.opengamma.masterdb.batch">

  <class name="com.opengamma.masterdb.batch.RiskValueConstraints" table="rsk_value_constraints">
    <id name="id">
      <generator class="org.hibernate.id.enhanced.SequenceStyleGenerator">
        <param name="optimizer">hilo</param>
        <param name="increment_size">100</param>
      </generator>
    </id>

    <property name="syntheticConstraints" column="synthetic_constraints" not-null="true"/>
  </class>

  <query name="RiskValueConstraints.one.bySynthesizedConstraints">
    from RiskValueConstraints as a where
    a.syntheticConstraints = :constraints
  </query>

</hibernate-mapping>