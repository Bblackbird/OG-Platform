<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
	"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
	"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="com.opengamma.masterdb.batch">

  <class name="ViewDefinition" table="rsk_view_definition">
    <id name="id">
      <generator class="org.hibernate.id.enhanced.SequenceStyleGenerator">
      	<param name="optimizer">hilo</param>
      	<param name="increment_size">100</param>
      </generator>
    </id>

    <property name="uid" column="uid" not-null="true"/>

  </class>
  
  <query name="ViewDefinition.one.byUID">
    from ViewDefinition as a where
    a.uid = :uid
  </query>
  
</hibernate-mapping>