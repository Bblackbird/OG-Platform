<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
	"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
	"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="com.opengamma.masterdb.batch">

  <class name="LiveDataSnapshot" table="rsk_live_data_snapshot">
    <id name="id">
      <generator class="org.hibernate.id.enhanced.SequenceStyleGenerator">
      	<param name="optimizer">hilo</param>
      	<param name="increment_size">100</param>
      </generator>
    </id>
    <set name="snapshotEntries" inverse="true">
        <key column="snapshot_id"/>
        <one-to-many class="LiveDataSnapshotEntry"/>
    </set>

    <property name="marketDataSnapshotUid" column="market_data_snapshot_uid" not-null="true"/>

  </class>
  
  <query name="LiveDataSnapshot.one.byMarketDataSnapshotUid">
    from LiveDataSnapshot as a where
    a.marketDataSnapshotUid = :marketDataSnapshotUid
  </query>
  
</hibernate-mapping>