<?xml version="1.0" encoding="UTF-8"?>
<project
    xmlns="http://maven.apache.org/POM/4.0.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
 
  <parent>
    <groupId>com.opengamma</groupId>
    <artifactId>og-parent</artifactId>
    <version>1.2.0-SNAPSHOT</version>
    <relativePath>../OG-Parent</relativePath>
  </parent>  
  <artifactId>og-server</artifactId>
  <packaging>pom</packaging>
  <name>OG-Server</name>
  <description>OpenGamma server dependencies</description>

  <build>
    <plugins>
      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>exec-maven-plugin</artifactId>
        <executions>
          <execution>
            <phase>package</phase>
            <goals>
              <goal>exec</goal>
            </goals>
          </execution>
        </executions>
        <configuration>
          <executable>java</executable>
          <arguments>
            <argument>-cp</argument>
            <classpath />
            <argument>com.opengamma.util.generate.scripts.CustomScriptsGenerator</argument>
            <argument>-o</argument>
            <argument>${project.build.directory}/scripts</argument>
            <argument>-t</argument>
            <argument>script-template.ftl</argument>
          </arguments>
        </configuration>      
      </plugin>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-antrun-plugin</artifactId>
        <executions>
          <execution>
            <phase>package</phase>
            <configuration>
              <target>
                <copy todir="${project.build.directory}/scripts">
                  <fileset dir="${project.basedir}/scripts" />
                </copy>
                <chmod dir="${project.build.directory}/scripts" includes="*" perm="755" />
                <zip basedir="${project.build.directory}/scripts" destfile="${project.build.directory}/scripts.zip" />
              </target>
            </configuration>
            <goals>
              <goal>run</goal>
            </goals>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>build-helper-maven-plugin</artifactId>
        <executions>
          <execution>
            <id>attach-artifacts</id>
            <phase>package</phase>
            <goals>
              <goal>attach-artifact</goal>
            </goals>
            <configuration>
              <artifacts>
                <artifact>
                  <file>${project.build.directory}/og-server-scripts.zip</file>
                  <type>zip</type>
                  <classifier>scripts</classifier>
                </artifact>
              </artifacts>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>

  <dependencies>
    <dependency>
      <groupId>com.opengamma</groupId>
      <artifactId>og-util</artifactId>
      <version>${project.version}</version>
    </dependency>
    <dependency>
      <groupId>com.opengamma</groupId>
      <artifactId>og-core</artifactId>
      <version>${project.version}</version>
    </dependency>
    <dependency>
      <groupId>com.opengamma</groupId>
      <artifactId>og-component</artifactId>
      <version>${project.version}</version>
    </dependency>
    <dependency>
      <groupId>com.opengamma</groupId>
      <artifactId>og-engine</artifactId>
      <version>${project.version}</version>
    </dependency>
    <dependency>
      <groupId>com.opengamma</groupId>
      <artifactId>og-financial</artifactId>
      <version>${project.version}</version>
    </dependency>
    <dependency>
      <groupId>com.opengamma</groupId>
      <artifactId>og-analytics</artifactId>
      <version>${project.version}</version>
    </dependency>
    <dependency>
      <groupId>com.opengamma</groupId>
      <artifactId>og-livedata</artifactId>
      <version>${project.version}</version>
    </dependency>
    <dependency>
      <groupId>com.opengamma</groupId>
      <artifactId>og-master</artifactId>
      <version>${project.version}</version>
    </dependency>
    <dependency>
      <groupId>com.opengamma</groupId>
      <artifactId>og-masterdb</artifactId>
      <version>${project.version}</version>
    </dependency>
    <dependency>
      <groupId>com.opengamma</groupId>
      <artifactId>og-integration</artifactId>
      <version>${project.version}</version>
    </dependency>
    <dependency>
      <groupId>com.opengamma</groupId>
      <artifactId>og-region-data</artifactId>
      <version>1.0.0.v20110908a</version>
    </dependency>
  </dependencies>

  <properties>
    <og-platform.basedir>${project.parent.basedir}/../..</og-platform.basedir>
  </properties>

</project>
