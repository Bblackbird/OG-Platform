<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
	"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
	"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="com.opengamma.engine.batch.db">

  <class name="RiskComputeFailure" table="rsk_compute_failure">
    <id name="id">
      <generator class="org.hibernate.id.enhanced.SequenceStyleGenerator">
      	<param name="optimizer">hilo</param>
      	<param name="increment_size">100</param>
      </generator>
    </id>
    <property name="functionId" column="function_id" not-null="true"/>
    <property name="functionName" column="function_name" not-null="true"/>
    <property name="exceptionClass" column="exception_class" not-null="true"/>
    <property name="stackTrace" column="stack_trace" not-null="true"/>
  </class>
  
  <query name="RiskComputeFailure.one.byAll">
  	from RiskComputeFailure as a where 
  	a.functionId = :functionId and
  	a.functionName = :functionName and
  	a.exceptionClass = :exceptionClass and
  	a.stackTrace = :stackTrace</query>  
  
</hibernate-mapping>