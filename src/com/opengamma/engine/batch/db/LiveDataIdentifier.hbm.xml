<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
	"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
	"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="com.opengamma.engine.batch.db">

  <class name="LiveDataIdentifier" table="rsk_live_data_identifier">
    <id name="id">
      <generator class="org.hibernate.id.enhanced.SequenceStyleGenerator">
      	<param name="optimizer">hilo</param>
      	<param name="increment_size">100</param>
      </generator>
    </id>
    <property name="scheme" column="id_scheme" not-null="true"/>
    <property name="value" column="id_value" not-null="true"/>
  </class>
  
  <query name="LiveDataIdentifier.one.bySchemeAndValue">
  	from LiveDataIdentifier as a where 
  	a.scheme= :scheme and
  	a.value = :value</query>
  
</hibernate-mapping>