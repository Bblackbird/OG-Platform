<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
	"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
	"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="com.opengamma.engine.batch.db">

  <class name="OpenGammaVersion" table="rsk_opengamma_version">
    <id name="id">
      <generator class="org.hibernate.id.enhanced.SequenceStyleGenerator">
      	<param name="optimizer">hilo</param>
      	<param name="increment_size">100</param>
      </generator>
    </id>
    <property name="version" not-null="true"/>
    <property name="hash" not-null="true"/>
  </class>
  
  <query name="OpenGammaVersion.one.byVersionAndHash">
  	from OpenGammaVersion as a where 
  	a.version = :version and 
  	a.hash = :hash</query>  
  
</hibernate-mapping>