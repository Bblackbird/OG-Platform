<!-- If you want to make things much more quiet, use this file like -Dlogback.configurationFile=com/opengamma/util/test/info-logback.xml -->
<configuration debug="true">

  <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
    <layout class="ch.qos.logback.classic.PatternLayout">
      <Pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</Pattern>
    </layout>
  </appender>
  
  <logger name="com.opengamma.engine.view.PortfolioEvaluationModel" level="INFO"/>
  <logger name="com.opengamma.engine.view.View" level="INFO"/>
  <logger name="com.opengamma.engine.view.ViewProcessor" level="INFO"/>
  <logger name="com.opengamma.engine.view.calc.ViewRecalculationJob" level="INFO"/>
  <logger name="com.opengamma.engine.view.calcnode.AbstractCalculationNode" level="INFO"/>

  <root level="warn">
    <appender-ref ref="STDOUT" />
  </root>
  
</configuration>