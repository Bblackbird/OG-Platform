<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
  "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
  "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="com.opengamma.financial.security.master.db.hibernate.cash">
  <union-subclass name="CashSecurityBean" extends="com.opengamma.financial.security.master.db.hibernate.SecurityBean" table="sec_cash">
    <many-to-one name="currency" column="currency_id" class="com.opengamma.financial.security.master.db.hibernate.CurrencyBean" not-null="true" />
  	<component name="region" class="com.opengamma.financial.security.master.db.hibernate.IdentifierBean">
  	  <property name="scheme" column="region_scheme" type="string" />
  	  <property name="identifier" column="region_identifier" type="string" />
      <component name="maturity" class="com.opengamma.financial.security.master.db.hibernate.ZonedDateTimeBean">
		<property name="date" column="expiry_date" type="timestamp" not-null="true" />
		<property name="zone" column="expiry_zone" type="string" not-null="true" />
  	  </component>
  	</component>
  </union-subclass>

  <query name="CashSecurityBean.one.bySecurityId"><![CDATA[
    from 
      CashSecurityBean as s
    where
      s.securityId = :securityId
  ]]></query>

  <query name="CashSecurityBean.all">
    from CashSecurityBean
  </query>

</hibernate-mapping>