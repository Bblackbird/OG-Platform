<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
  "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
  "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="com.opengamma.financial.security.db.bond">
  <union-subclass name="BondSecurityBean" extends="com.opengamma.financial.security.db.SecurityBean" table="sec_bond">
    <property name="bondType" column="bond_type" type="com.opengamma.financial.security.db.bond.BondTypeUserType" not-null="true" />
    <property name="issuerName" column="issuername" type="string" not-null="true" />
    <many-to-one name="issuerType" column="issuertype_id" class="IssuerTypeBean" not-null="true" />
    <property name="issuerDomicile" column="issuerdomicile" type="string" not-null="true" />
    <many-to-one name="market" column="market_id" class="MarketBean" not-null="true" />
    <many-to-one name="currency" column="currency_id" class="com.opengamma.financial.security.db.CurrencyBean" not-null="true" />
    <many-to-one name="yieldConvention" column="yieldconvention_id" class="YieldConventionBean" not-null="true" />
    <many-to-one name="guaranteeType" column="guaranteetype_id" class="GuaranteeTypeBean" not-null="true" />
    <property name="maturity" column="maturity" type="date" not-null="true" />
    <many-to-one name="couponType" column="coupontype_id" class="CouponTypeBean" not-null="true" />
    <property name="couponRate" column="couponrate" type="double" not-null="true" />
    <many-to-one name="couponFrequency" column="couponfrequency_id" class="com.opengamma.financial.security.db.FrequencyBean" not-null="true" />
    <many-to-one name="dayCountConvention" column="daycountconvention_id" class="com.opengamma.financial.security.db.DayCountBean" not-null="true" />
    <many-to-one name="businessDayConvention" column="businessdayconvention_id" class="com.opengamma.financial.security.db.BusinessDayConventionBean" not-null="true" />
    <property name="announcementDate" column="announcementdate" type="date" not-null="true" />
    <property name="interestAccrualDate" column="interestaccrualdate" type="date" not-null="true" />
    <property name="settlementDate" column="settlementdate" type="date" not-null="true" />
    <property name="firstCouponDate" column="firstcoupondate" type="date" not-null="true" />
    <property name="issuancePrice" column="issuanceprice" type="double" not-null="true" />
    <property name="totalAmountIssued" column="totalamountissued" type="double" not-null="true" />
    <property name="minimumAmount" column="minimumamount" type="double" not-null="true" />
    <property name="minimumIncrement" column="minimumincrement" type="double" not-null="true" />
    <property name="parAmount" column="paramount" type="double" not-null="true" />
    <property name="redemptionValue" column="redemptionvalue" type="double" not-null="true" />
  </union-subclass>
  <query name="BondSecurityBean.all">
    from BondSecurityBean
  </query>
</hibernate-mapping>