<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
	"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
	"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="com.opengamma.financial.batch.db">

  <class name="StatusEntry" table="rsk_run_status">
    <id name="id">
      <generator class="org.hibernate.id.enhanced.SequenceStyleGenerator">
      	<param name="optimizer">hilo</param>
      	<param name="increment_size">100</param>
      </generator>
    </id>
    <property name="calculationConfigurationId" not-null="true"/>
    <property name="computationTargetId" not-null="true"/>
    <property name="status" not-null="true"/>
  </class>
  
  <query name="StatusEntry.one.byCalcConfAndComputationTarget">
  	from StatusEntry as a where 
  	a.calculationConfigurationId = :calculationConfigurationId and
  	a.computationTargetId = :computationTargetId</query>  
  
</hibernate-mapping>