<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
	"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
	"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="com.opengamma.security.user">

  <class name="UserGroup" table="user_groups">
  	<id name="id" column="group_id">
      <generator class="org.hibernate.id.enhanced.SequenceStyleGenerator"/>
    </id>
    <property name="name" not-null="true" unique="true"/>
    <set name="users" inverse="true" table="users_to_user_groups">
    	<key column="user_group_id"/>
    	<many-to-many column="user_id" class="User"/>
    </set>
    <set name="authorities" table="user_groups_to_authorities">
    	<key column="group_id"/>
    	<many-to-many column="authority_id" class="Authority"/>
    </set>
  </class>
  
</hibernate-mapping>