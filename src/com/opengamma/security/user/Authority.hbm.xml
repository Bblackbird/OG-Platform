<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
	"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
	"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="com.opengamma.security.user">

  <class name="Authority" table="authorities">
  	<id name="id">
      <generator class="org.hibernate.id.enhanced.SequenceStyleGenerator"/>
    </id>
    <property name="authority" unique="true" not-null="true"/>
  </class>
  
  <query name="Authority.one.byAuthorityName">from Authority as a where a.authority = :authority</query>

</hibernate-mapping>